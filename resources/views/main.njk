<div class="row">
  {% for category in categories %}
  <div class="col-lg-12">
    <div class="panel panel-primary">
      <div class="panel-heading">{{ category.name }}</div>
      <ul class="list-group">
        {% for card in category.topCards %}
          {% if (card.user_id == currentUser.id) %}
            <li class="list-group-item">
              <a href="/cards/{{ card.id }}">
                {{ card.name }}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}
